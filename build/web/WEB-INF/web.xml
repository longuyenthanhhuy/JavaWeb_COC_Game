<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <welcome-file-list>
        <welcome-file>home</welcome-file>
    </welcome-file-list>
    <filter-mapping>
        <filter-name>AuthenticationFilter</filter-name>
    </filter-mapping>
    <filter-mapping>
        <filter-name>AuthorizationFilter</filter-name>
    </filter-mapping>
    <servlet>
        <servlet-name>HomeControler</servlet-name>
        <servlet-class>controler.sync.HomeControler</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>FilterCategoryControler</servlet-name>
        <servlet-class>controler.sync.FilterCategoryControler</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>SearchControler</servlet-name>
        <servlet-class>controler.sync.SearchControler</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DetailControler</servlet-name>
        <servlet-class>controler.sync.DetailControler</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AddToCartControler</servlet-name>
        <servlet-class>controler.sync.AddToCartControler</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DisplayCartsControler</servlet-name>
        <servlet-class>controler.sync.DisplayCartsControler</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DeleteCartControler</servlet-name>
        <servlet-class>controler.sync.DeleteCartControler</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LoginControler</servlet-name>
        <servlet-class>controler.sync.LoginControler</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LogoutControler</servlet-name>
        <servlet-class>controler.sync.LogoutControler</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AdminControler</servlet-name>
        <servlet-class>controler.sync.AdminControler</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AddToCartAsyncControler</servlet-name>
        <servlet-class>controler.async.AddToCartAsyncControler</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CheckOutControler</servlet-name>
        <servlet-class>controler.sync.CheckOutControler</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ThankYouCartControler</servlet-name>
        <servlet-class>controler.sync.ThankYouCartControler</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LibraryControler</servlet-name>
        <servlet-class>controler.sync.LibraryControler</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>RegisterControler</servlet-name>
        <servlet-class>controler.sync.RegisterControler</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ActiveCodeControler</servlet-name>
        <servlet-class>controler.sync.ActiveCodeControler</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DeleteProductControler</servlet-name>
        <servlet-class>controler.sync.DeleteProductControler</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UpdateProductControler</servlet-name>
        <servlet-class>controler.sync.UpdateProductControler</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>HomeControler</servlet-name>
        <url-pattern>/home</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>FilterCategoryControler</servlet-name>
        <url-pattern>/filter-category</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SearchControler</servlet-name>
        <url-pattern>/search</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DetailControler</servlet-name>
        <url-pattern>/detail</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AddToCartControler</servlet-name>
        <url-pattern>/add-to-cart</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DisplayCartsControler</servlet-name>
        <url-pattern>/show-carts</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DeleteCartControler</servlet-name>
        <url-pattern>/delete-cart</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LoginControler</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LogoutControler</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AdminControler</servlet-name>
        <url-pattern>/admin/dashboard</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AddToCartAsyncControler</servlet-name>
        <url-pattern>/add-to-cart-async</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CheckOutControler</servlet-name>
        <url-pattern>/checkout</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ThankYouCartControler</servlet-name>
        <url-pattern>/thankyou</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LibraryControler</servlet-name>
        <url-pattern>/library</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>RegisterControler</servlet-name>
        <url-pattern>/register</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ActiveCodeControler</servlet-name>
        <url-pattern>/active</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DeleteProductControler</servlet-name>
        <url-pattern>/admin/delete-product</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UpdateProductControler</servlet-name>
        <url-pattern>/admin/update-product</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
